{
    "variables": {
        "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
        "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
        "region":         "eu-west-2",
        "ami_regions":    "eu-west-2,us-west-2",
        "image_tag":      "{{env `TRAVIS_BRANCH`}}"
    },
    "builders": [
        {
            "access_key": "{{user `aws_access_key`}}",
            "ami_name": "ckan-cloud-operator-{{user `image_tag`}}",
            "ami_regions": "{{user `ami_regions`}}",
            "instance_type": "t2.micro",
            "region": "{{user `region`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "source_ami_filter": {
              "filters": {
              "virtualization-type": "hvm",
              "name": "ubuntu/images/*ubuntu-bionic-18.04-amd64-server-*",
              "root-device-type": "ebs"
              },
              "owners": ["099720109477"],
              "most_recent": true
            },
            "ssh_username": "ubuntu",
            "type": "amazon-ebs",
            "ami_groups": ["all"]
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "../../../",
            "destination": "/home/ubuntu/"
        },
        {
            "type": "shell",
            "inline": [
                "wget -q -O - https://pkg.jenkins.io/debian/jenkins.io.key | sudo apt-key add -",
                "sudo sh -c 'echo deb http://pkg.jenkins.io/debian-stable binary/ > /etc/apt/sources.list.d/jenkins.list'",
                "sudo add-apt-repository universe",
                "sudo apt-get update", 
                "sudo apt-get install -y build-essential zlib1g zlib1g-dev libbz2-dev libssl-dev libffi-dev libpq-dev default-jdk-headless unzip",
                "java --version",
                "sudo apt-get install -y jenkins",
                "curl https://pyenv.run | bash",
                "echo 'export PATH=\"/home/ubuntu/.pyenv/bin:$PATH\"' > ~/pyenv",
                "echo 'eval \"$(pyenv init -)\"' >> ~/pyenv",
                "echo 'eval \"$(pyenv virtualenv-init -)\"' >> ~/pyenv",
                "echo '. $HOME/pyenv' >> ~/.profile",
                ". ~/.profile",
                "pyenv install 3.7.6",
                "pyenv global 3.7.6",
                "python --version",
                "pip --version",
                "K8_PROVIDER=aws TERRAFORM_VERSION=0.12.18 /home/ubuntu/.travis.sh install-tools",
                "python3 -m pip install -e /home/ubuntu/",
                "sudo sh -c \"echo 'jenkins ALL=(ALL) NOPASSWD:ALL' > /etc/sudoers.d/91-jenkins\"",
                "sudo cp /var/lib/jenkins/secrets/initialAdminPassword /tmp/initialAdminPassword ; sudo chmod a+r /tmp/initialAdminPassword"
            ]
        },
        {
            "type": "file",
            "direction": "download",
            "source": "/tmp/initialAdminPassword",
            "destination": "./initialAdminPassword"
        }
    ]
}
